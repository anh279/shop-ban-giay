@model IEnumerable<WebBanGiay.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="jumbotron py-4 text-center">
            <h1>Sản phẩm</h1>
        </div>
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <!-- Sử dụng btn-lg để làm nút to hơn -->
                <i class="fas fa-plus-circle mr-2"></i> <!-- Thêm biểu tượng 'plus' bằng Font Awesome và đặt khoảng cách bên phải (mr-2) -->
                Tạo sản phẩm mới
            </a>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable">

                    <thead>
                        <tr>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Thể loại</th>
                            <th scope="col">Kiểu</th>
                            <th scope="col">Giá sản phẩm</th>
                            <th scope="col">Giảm giá</th>
                            <th scope="col">Hình ảnh</th>
                            <th scope="col">Kích cỡ</th>
                            <th scope="col">Màu sắc</th>
                            <th scope="col">Hot</th>
                            <th scope="col">New</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td class="product-description text-truncate" style="max-width: 300px;">
                                    @Html.DisplayFor(modelItem => item.ProductDescription)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type.TypeName)</td>
                                <td>@(item.ProductPrice.ToString("N0"))₫</td>
                                <td>@(((float)item.ProductDiscount * 100).ToString("0,0"))%</td>
                                <td><img src="~/img/@Html.DisplayFor(modelItem => item.ProductImage)" class="img-fluid" style="max-width: 50px; height: auto;"></td>
                                <td>@Html.DisplayFor(modelItem => item.Size.SizeName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Color.ColorName)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsHot)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsNew)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
