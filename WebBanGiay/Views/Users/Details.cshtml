@model WebBanGiay.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="jumbotron py-4 text-center">
    <h1>Chi tiết thông tin người dùng</h1>
</div>

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th style="width: 30%">Tên đăng nhập:</th>
                    <td>@Html.DisplayFor(model => model.UserName)</td>
                </tr>
                <tr>
                    <th>Mật khẩu:</th>
                    <td>@Html.DisplayFor(model => model.UserPassword)</td>
                </tr>
                <tr>
                    <th>Họ và tên:</th>
                    <td>@Html.DisplayFor(model => model.UserFullName)</td>
                </tr>
                <tr>
                    <th>Số điện thoại:</th>
                    <td>@Html.DisplayFor(model => model.UserPhoneNumber)</td>
                </tr>
                <tr>
                    <th>Địa chỉ:</th>
                    <td>@Html.DisplayFor(model => model.UserAddress)</td>
                </tr>
                <tr>
                    <th>Vai trò:</th>
                    <td>@Html.DisplayFor(model => model.UserRole)</td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.UserName" class="btn btn-primary">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
