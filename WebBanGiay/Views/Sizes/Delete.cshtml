@model WebBanGiay.Models.Size

@{
    ViewData["Title"] = "Xóa Kích Cỡ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="jumbotron py-4 text-center">
        <h1 class="text-danger display-4">Xóa Kích Cỡ</h1>
        <p class="lead mb-4">Bạn có chắc chắn muốn xóa kích cỡ này không?</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Chi Tiết Kích Cỡ</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">@Html.DisplayName("Tên Kích Cỡ")</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SizeName)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" class="form-inline">
                <input type="hidden" asp-for="SizeId" />
                <button type="submit" class="btn btn-danger mr-2">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </form>
        </div>
    </div>
</div>
