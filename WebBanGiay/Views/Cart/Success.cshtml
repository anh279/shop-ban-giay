@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card p-4 text-center border border-success rounded">
        <!-- Success Icon -->
        <div class="mb-4">
            <i class="fas fa-check-circle fa-5x text-success"></i>
        </div>

        <!-- Success Message -->
        <h1 class="mb-4">Thanh toán thành công!</h1>
        <p>Thanh toán của bạn đã được xử lý thành công. Cám ơn vì đã mua giày của chúng tôi!</p>

        <!-- Back to Shop Button -->
        <a href="/" class="btn btn-primary mt-4">Trở về cửa hàng</a>
    </div>
</div>

