
@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<title>Login</title>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h2 text-gray-900 mb-4">Đăng nhập</h1>
                                    </div>
                                @using (Html.BeginForm("Login", "Account", FormMethod.Post,new{@class="user"}))
                                {
                                    <div class="form-group">
                                        
                                        @Html.TextBoxFor(m=>m.UserName, new {@placeholder="Nhập tài khoản",@class="form-control form-control-user"})
                                    </div>
                                    <div class="form-group">
                                        
                                        @Html.TextBoxFor(m=>m.UserPassword, new {@placeholder="Nhập mật khẩu",@class="form-control form-control-user",@type="password"})
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Ghi nhớ đăng nhập
                                            </label>
                                        </div>
                                    </div>
                                    @if (ViewBag.LoginStatus == 0 && ViewBag.LoginStatus != null)
                                    {
                                        <div style="color: #ff0000">
                                            <p>Tài khoản hoặc mật khẩu chưa chính xác !</p>
                                        </div>
                                    }
                                    <button type="submit" class="btn btn-info btn-user btn-block">
                                        Đăng nhập
                                    </button>
                                    <div class="social-container">
                                        <a href = "#" class="social" ><i class="fab fa-facebook-f"></i></a>
                                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a> 
                                    </div>
                                }
                   
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                                    </div>
                                    <div class="text-center">
                                    <p class="small">Nếu bạn chưa có tài khoản vui lòng đăng ký <a  href="/Account/Register">tại đây</a></p>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


<style>
    .social-container {
        text-align: center;
        margin: 20px 0;
    }

        .social-container .social {
            border: 1px solid #dddddd;
            border-radius: 50%;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin: 0 5px;
            height: 40px;
            width: 40px;
            opacity: 0.8;
        }

            .social-container .social:hover {
                text-decoration: none;
                opacity: 1;
            }

    .fa-google-plus-g {
        color: red;
    }
</style>